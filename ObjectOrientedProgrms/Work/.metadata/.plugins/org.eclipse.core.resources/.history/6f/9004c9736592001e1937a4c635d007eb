public class Mobilee{
	static String name;
	static int price;
	static int storage;
	static int version;
	static String colour;
		public static void getMobileDetails(String mobileName, int mobilePrice, int mobileStorage){
			name=mobileName;
			price=mobilePrice;
			storage=mobileStorage;
				System.out.println("Mobile name is :"+name);
				System.out.println("Mobile price is :"+price);
				System.out.println("Mobile storage is :"+storage);
		}
		public static int getMobileVersion(int mobileVersion){
			version=mobileVersion;
			return version;
		}
		public static int getMobileVersion(int mobileVersion,int mobilePrice){
			version=mobileVersion;
			price=mobilePrice;
			return price;
		}
		public static String getMobileColour(String mobileColour){
			colour=mobileColour;
			return colour;
		}
}