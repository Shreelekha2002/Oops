public class SortLargest {    
    public static void main(String[] args) {        
        //Initialize array     
        int a[] = {5, 2, 8, 7, 1}; 
		int temp;
		//System.out.println("Largest element is:"+a[a.length-1]);
		for(int i=0; i<a.length; i++){
			if(a[i]>a[i+1]){
				temp=a[i];
				a[i]=a[i+1];
				a[i+1]=temp;
				System.out.println(a[i]);
				
			}
				
		}
	}
}      